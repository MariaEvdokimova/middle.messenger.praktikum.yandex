<div class="container container--border" align="center" >
	<h1 class="title">Sign in</h1>
	<form class="form" action="/chats">
		<div class="form__item" >
			<lable class="form__label" for="login">Login</lable>
			<input class="form__input" type="text" name="login">
		</div>
		<div class="form__item">
			<lable class="form__label" for="password">Password</lable>
			<input class="form__input" type="password" name="password">
		</div>
		<div class="form__item form__item-button form__item-button--auth">
			{{{button}}}
			<a class="form__link" href="/registration">Create a profile</a>
		</div>
	</form>
</div>