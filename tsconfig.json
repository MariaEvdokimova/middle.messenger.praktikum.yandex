{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es2016",
    "typeRoots": ["node_modules/@types", "./types"],
    "sourceMap": true,
    "strictNullChecks": true,  
    "noUnusedParameters": true,  
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "ESNext",
      "DOM"
    ]
  },
  "include": ["./**/*.ts"]
}
